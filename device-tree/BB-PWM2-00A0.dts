/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/pinctrl/am33xx.h>

/{
	/*
	 * Helper to show loaded overlays under: /proc/device-tree/chosen/overlays/
	 */
	fragment@0 {
		target-path="/";
		__overlay__ {

			chosen {
				overlays {
					BB-PWM2-00A0 = __TIMESTAMP__;
				};
			};
		};
	};

	fragment@1 {
		target = <&ocp>;
		__overlay__ {
			P8_13_pinmux { status = "disabled"; };	/* (T10) gpmc_ad9.ehrpwm2B */
			P8_19_pinmux { status = "disabled"; };	/* (U10) gpmc_ad8.ehrpwm2A */
		};
	};

	fragment@2 {
		target = <&am33xx_pinmux>;
		__overlay__ {
			bb_pwm2_pin: pinmux-pwm2-pin {
				pinctrl-single,pins = <
					0x020 0x04 /* P8_19 MODE4 ehrpwm2A PWM */
					0x024 0x04 /* P8_13 MODE4 EHRPWM2B PWM */
				>;
			};
		};
	};

	fragment@3 {
		target = <&ocp>;
		__overlay__ {
			bb_pwm2_test_helper: bb_pwm2_helper {
				compatible = "bone-pinmux-helper";
				pinctrl-names = "default";
				pinctrl-0 = <&bb_pwm2_pin>;
				status = "okay";
			};
		};
	};

	fragment@4 {
		target = <&epwmss2>;
		__overlay__ {
			status = "okay";
            ti,no-idle;
            ranges = <0x48304000 0x48304000 0x1000>;
            uio@48304000 {
              reg = <0x48304000 0x1000>;
              compatible = "uio";
              symlink = "uio/pwmss2/module";
            };
		};
	};

	fragment@5 {
		target = <&ehrpwm2>;
		__overlay__ {
			status = "okay";
            reg = <0x48304200 0x80>, <0x48304280 0x80>;
            reg-names = "pwm", "hr";
            interrupt-parent = <&intc>;
            interrupts = <39>;
            compatible = "uio";
            symlink = "uio/pwmss2/pwm";
		};
	};

	fragment@6 {
		target = <&ehrpwm2_tbclk>;
		__overlay__ {
            ti,set-bit-to-disable;
		};
	};
};

